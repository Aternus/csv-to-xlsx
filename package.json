{
  "name": "@aternus/csv-to-xlsx",
  "version": "2.1.3",
  "description": "Convert CSV files to XLSX (Excel 2007+ XML Format) files via Node.js CLI or API.",
  "keywords": [
    "convert",
    "csv",
    "xlsx",
    "excel",
    "xml",
    "utf-8",
    "multilingual",
    "batch",
    "cli",
    "api",
    "windows",
    "linux",
    "macos"
  ],
  "type": "commonjs",
  "main": "dist/src/convertCsvToXlsx.js",
  "types": "dist/src/convertCsvToXlsx.d.ts",
  "bin": {
    "csv-to-xlsx": "dist/cli/csv-to-xlsx.js"
  },
  "scripts": {
    "clean": "npx rimraf ./dist ./bin",
    "build:dist": "npx tsc --build",
    "build:dist:watch": "npx tsc --build --watch",
    "prebuild:bin": "npm run build:dist",
    "build:bin": "npx pkg .",
    "lint:prettier": "npx prettier --check .",
    "lint:eslint": "npx eslint .",
    "test:api": "npx jest",
    "test:cli": "npx csv-to-xlsx --help",
    "test:bin": "node ./platform.tester.mjs",
    "start:cli": "npx csv-to-xlsx",
    "start": "npm-run-all build:dist start:cli",
    "preversion": "npm-run-all test",
    "version": "npm-run-all build git:add",
    "postversion": "npm-run-all git:push git:push:tags",
    "prepare": "husky"
  },
  "author": {
    "name": "Kiril Reznik"
  },
  "license": "MIT",
  "homepage": "https://github.com/Aternus/csv-to-xlsx",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Aternus/csv-to-xlsx.git"
  },
  "bugs": {
    "url": "https://github.com/Aternus/csv-to-xlsx/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.16.2",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "husky": "^9.0.11",
    "jest": "29.7.0",
    "npm-run-all": "^4.1.5",
    "pkg": "^5.1.0",
    "prettier": "3.2.5",
    "ts-jest": "29.1.2",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "csv-parse": "^5.0.4",
    "fs-extra": "^11.1.1",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.1/xlsx-0.20.1.tgz"
  },
  "engines": {
    "node": ">=16"
  },
  "pkg": {
    "outputPath": "bin",
    "targets": [
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-win-x64"
    ]
  }
}
