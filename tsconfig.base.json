{
  "compilerOptions": {
    "rootDir": ".",

    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": true,

    "module": "CommonJS",
    "target": "ES2021",
    "lib": ["ES2021"],

    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true
  }
}
