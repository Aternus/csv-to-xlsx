{
  "compilerOptions": {
    "rootDir": ".",

    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": true,

    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true
  }
}
